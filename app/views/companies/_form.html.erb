<%= form_for(@company, html: { class: 'form-horizontal company-form' }) do |f| %> 
  <%= render 'error' %>
  <div class="form-group">
    <%= f.label :name, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :name, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :address, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :address, class: 'form-control' %>
    </div>
  </div>
  <%= f.submit (@company.id ? "Update" : "Create"), class: "btn btn-default submit" %>
<% end %>