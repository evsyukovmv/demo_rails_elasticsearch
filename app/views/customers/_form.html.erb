<%= form_for(@customer, html: { class: 'form-horizontal customer-form' }) do |f| %> 
  <%= render 'error' %>
  <div class="form-group">
    <%= f.label :first_name, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :first_name, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :last_name, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :last_name, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :company, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <input type="text" value="<%= @customer.company.try(:name) %>" id="company-autocomplete" class="form-control typeahead" />
      <%= f.hidden_field :company_id %>
    </div>
  </div>
  <%= f.submit (@customer.id ? "Update" : "Create"), class: "btn btn-default submit" %>
<% end %>