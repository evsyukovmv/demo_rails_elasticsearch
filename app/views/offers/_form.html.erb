<%= form_for(@offer, html: { class: 'form-horizontal offer-form' }) do |f| %> 
  <%= render 'error' %>
  <div class="form-group">
    <%= f.label :title, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :title, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :description, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :description, rows: 3, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :customer, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <input type="text" value="<%= @offer.customer.try(:name_with_company) %>" id="customers-autocomplete" class="form-control typeahead customers-search" />
      <%= f.hidden_field :customer_id %>
    </div>
  </div>
  <%= f.submit (@offer.id ? "Update" : "Create"), class: "btn btn-default submit" %>
<% end %>