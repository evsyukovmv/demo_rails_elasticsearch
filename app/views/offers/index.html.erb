
<div class="container">
  <div class="row">
    <div class="col-md-8">
      <h2>Offers</h1>
    </div>
    <div class="col-md-4">
      <input type="text" style="margin-top: 20px; margin-bottom: 10px;" class="form-control typeahead" placeholder="Search" />
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <table class="table table-hover">
        <thead>
        <tr>
          <th>Title</th>
          <th>Description</th>
          <th>Customer</th>
          <th>Company</th>
        </tr>
        </thead>
        <tbody>
        <% @offers.each do |offer| %>
            <tr>
              <td><%= offer.title %></td>
              <td><%= offer.description %></td>
              <td><%= offer.customer.name %></td>
              <td><%= offer.customer.company.name %></td>
            </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
    <div class="row">
      <div class="col-md-12">
        <%= will_paginate @offers %>
      </div>
    </div>
</div>